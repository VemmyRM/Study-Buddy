{
    "database": {
      "rules": "database.rules.json"
    },
    "hosting": {
      "public": "build/index.html",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }